extends layout

block content
  h1 Welcome to Police Agency
  div
  p Requests for verification
   table#customers.table.table-hover
    thead
      tr: th  Inssurance Id
          th  Fir Number
          th  Customer
          th  Product
          th  End Date
    tbody
      each user in requests
        tr
          td=user.id
          td=user.fir
          td=user.Customer
          td=user.Product
          td=user.End_Date
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Police Verification  

        // Police Verification 
        form(method='POST' action='/police/policeVerification')
          div.form-group
            label(for='ID') Inssurance Id:
            input#ID.form-control(type='text', placeholder='first and last' name='ID')

          div.form-group
            label(for='fir') FIR Number:
            input#fir.form-control(type='text', placeholder='first and last' name='fir')
          
          button.btn.btn-primary(type='submit') Sign up